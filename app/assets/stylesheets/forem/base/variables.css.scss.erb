$accent: #2bbfc9;
$attention: #F6B960;
$main: #464646;
$links: #9b9b9b;
$lightGrey:#bdbdbd;
$lighterGrey: #f0f0f0;
$dashed: 2px dashed $main;
$dashed-focus: 2px dashed $accent;
$rounded: 10px;

$light-bg1: #eee;
$mid-bg1: #ccc;
$mid-bg1-highlight: #aaa;
$bar1-topbg: #eee;
$bar1-midbg: #bbb;
$bar1-bottombg: #aaa;
$lighter-text: #777;
$visited-text: #333;
$default-text: #000;
$darkbg: #333;
$darkbg-highlight: #222;

@mixin blue-box {
  border-radius: $rounded;
  border: 2px solid $accent;
}

@mixin transpBG {
  border-radius: 8px;
  background-color: rgba(255,255,255, 0.7);
  padding: 20px;
}

@mixin accent {
  color: $accent;
  font-size: 110%;
}

@mixin box-padding {
  padding: 10px 20px;
}

