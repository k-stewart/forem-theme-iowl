  // Style tweaks for Forem on IOWL.

  @import "variables";
$tableGrey: #e7e7e7;

<%# old style%>

.content > h3 {
  margin: 0;
  padding: 10px 15px;
  border-bottom: none;
}

#forums {
  td { padding: .25em; }
}

#forum{
  position: relative;
  .secondary-nav{
    position: absolute;
    right: 0;
    top: 0;
  }
}

.post{
  clear: both;
  position: relative;
 }

#topic_moderation {
  display: none;
  background: $accent;
  padding: 7px 5px;
}

table.subdued{
  width: 100%;
  a{
    text-decoration: none;
    &:visited{
      color: $visited-text;
    }
    &:hover{
      text-decoration: underline;
    }
  }
  td, th{
    padding: .5em;
  }
  thead{
    th{
      font-weight: normal;
      text-align: left;
    }
  }
  tbody{
    color: $lighter-text;
    vertical-align: top;
    .subject{
      font-size: 14pt;
    }
    .started-by{
      font-size: .8em;
      color: $lighter-text;
    }
    .latest-post{
      font-size: .7em;
      width: 80px;
      a{
        text-decoration: none;
        &:hover{
          text-decoration: underline;
        }
      }
    }
    .posts-count, .views-count{
      width: 80px;
    }
    .contents{
      margin-left: 160px;
      min-height: 100px;
      padding: .1em 1em;

      time{
        padding: 5px;
        color: $lighter-text;
        margin-bottom: 1em;
        font-size: .7em;
        line-height: 18px;
      }
      .text{
        margin-right: 100px;
      }
      .actions{
        list-style-type: none;
        li{
          display: inline;
          margin: 5px;
        }
      }
    }
  }
}

.pages{
  .page{
    display: inline-block;
    padding: .25em;
    &.current{
      background-color: $light-bg1;
    }
  }
  a{
    text-decoration: none;
    &:hover{
      text-decoration: underline;
    }
  }
}

.lock.icon{
  width: 24px;
  height: 24px;
  background: transparent url(<%= asset_path('forem/lock_icon.png') %>) 0 0;
  display: inline-block;
}

.pin.icon{
  width: 9px;
  height: 15px;
  background: transparent url(<%= asset_path('forem/pin_icon.png') %>) 0 0;
  display: inline-block;
}


 <%# new style %>

form {
  .input {
    margin-bottom: 0;
  }
  label { font-size: 17pt; }
  input, textarea {
    border: 2px solid $lightGrey;
    border-radius: 0;
    padding: 10px 20px;
    width: 100%
  }
  textarea {
    height: 23em;
    width: 100%;
  }
  input[type='submit'] {
    background-color: orange;
    padding: 5px 9px;
    border: none;
    border-radius: 8px;
    color: white;
    font-family: sans-serif;
    font-weight: 500;
    float: right;
    width: auto;
  }
}

#forums_container {
  .intro {
    line-height: 1;
    font-size: 12pt;
    margin-bottom: 48px;
  }
}

.forem {
  #page_header h2 {
    position: absolute;
    top: 55px;
    left: 42px;
    font-family: futura-pt;
    font-weight: normal;
    font-size: 14pt;
    a {
      color: $grey;
    }
  }

  #body_content {
    position: relative;
  }
  .category {
    h2 {
      font-family: 'futura-pt', sans-serif;
      font-weight: 500;
      margin-bottom: 2px;
      margin-top: 40px;
      a { color: $attention; }
    }
  }

  h3 {
    font-family: futura-pt;
    font-weight: 300;
    color: $attention;
    font-size: 18pt;
    padding-bottom: 4px;
    margin: 0 0 0 0;
  }

  #description {
    h3 p { margin: 0 0 0 0; }
    p { margin: 5px 0; }
  }

  .admin_actions {
    position: absolute;
    top: -26px;
    right: 3px;
  }
  menu {
    display: inline;
    float: right;
    margin-top: 0;
    a {
      background-color: orange;
      padding: 5px 9px;
      border-radius: 8px;
      color: white;
      font-family: sans-serif;
      font-weight: 500;
    }
  }

  #page {
    table {
      border-collapse: collapse;
      clear: right;
      a { color: $accent; }
      .member { width: 24% }
    }
    thead {
      background: $tableGrey;
    }
    tbody {
      tr { border-bottom: 2px solid $tableGrey; }
      .user{
        float: left;
        font-size: .75em;
        width: 140px;
        display: inline-block;
        padding: .5em 1em;
        .username{
          font-weight: bold;
        }
        .icon  {
          text-align: center;
          img {
            max-width: 70px;
          }
        }
        .member-for{
          width: 80px;
          display: inline-block;
        }
      }
      tr:last-child { border-bottom: none; }
      .latest_post {
        font-size: .8em;
        width: 100%;
      }
    }
  }
}

